cetak "\nğŸ¯ 4. Kombinasi Fitur dalam Fungsi:"

karojo prosesInput(nilai) {
    cetak.urai "ğŸ” Memproses input: " + nilai
    
    // Konversi ke angka
    buek angka = angko(nilai)
    
    kalau angka > 0 {
        buek hasil = kato(angka * 2)
        cetak.pesan "âœ… Hasil valid: " + hasil
        jadi hasil
    } kalauLain angka == 0 {
        cetak.peringatan "âš ï¸ Input adalah nol"
        jadi "nol"
    } kalauLain {
        cetak.rusak "âŒ Input tidak valid atau negatif"
        jadi kosong
    }
}

